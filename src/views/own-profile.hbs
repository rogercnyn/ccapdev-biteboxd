   function animateStroke(id, targetPercentage) {
    const element = document.getElementById(id);
    const maxDashoffset = parseInt(window.getComputedStyle(element).strokeDasharray);
    const startOffset = maxDashoffset;
    const endOffset = maxDashoffset * (1 - targetPercentage / 100);
    let currentOffset = startOffset;
    const step = (endOffset - startOffset) / 60; // Assuming 60 frames for the animation

    function frame() {
        currentOffset += step;
        if ((step < 0 && currentOffset <= endOffset) || (step > 0 && currentOffset >= endOffset)) {
            currentOffset = endOffset; // Ensure we don't go past the target value
            element.style.strokeDashoffset = currentOffset;
            return; // Stop the animation
        }
        element.style.strokeDashoffset = currentOffset;
        requestAnimationFrame(frame);
    }

    requestAnimationFrame(frame);
}

