<header>
    <a class="logo-link" onclick="transferSession('index')">
        <img src="assets/logo.png" alt="Biteboxd Logo" class="logo">
    </a>
    
    <a class="nav-icon-container" onclick="transferSession('index')">
        <img src="assets/home.svg" alt="" class="nav-icon">
        <p>Home</p>
    </a>
    
    <a class="nav-icon-container" onclick="transferSession('explore')">
        <img src="assets/explore.svg" alt="" class="nav-icon">
        <p>Explore</p>
    </a>

    <a class="nav-icon-container" onclick="transferSession('all')">
        <img src="assets/archive.svg" alt="" class="nav-icon">
        <p>All</p>
    </a>

    {{#if loggedIn}}
    <a href="#" class="account-icon" id="account-icon" onclick="togglePopup()">
        <img src="assets/profile.jpg" alt="" class="profile-icon" id="account-icon">
        <p>Profile</p>
    </a>

    <div class="popup-container" id="popupContainer" style="display: none;">
        <div class="popup" id="popup">
             <a href="#" onclick="viewOwnProfile()">View Profile</a>
            <a href="#" onclick="logOut()">Log Out</a>
        </div>
    </div>
    {{else}}
    <a href="/login" class="nav-icon-container">
        <img src="assets/person.svg" alt="" class="nav-icon" id="person-icon">
        <p>Login</p>
    </a>
    {{/if}}
</header>

<script>
    var loggedIn = "{{loggedIn}}"; 
</script>

<script src="/script/navbar.js"></script>
