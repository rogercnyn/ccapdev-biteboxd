<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/assets/tab-icon.png" type="image/x-icon">
    <title>{{name}}</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/script/general.js"></script>
    <script src="/script/like.js"></script>
    <script src="/script/quillSettings.js"></script>
    <script src="/script/slider.js"></script>
    <script src="/script/search-bar.js"></script>
  
    <link rel="stylesheet" href="/styles/resto-responsepage.css">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <!-- chart -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="/script/resto-responsepage.js"></script>
</head>
<body>
    {{> navbar}}

    <main class = "main">

    <div class="left">
        {{>restocard}}

        
        <hr>
        <div class="reviewarea">
                <div class="review-and-response">
                    {{#each reviews}}
                    <div class="review"> 
                        <div class="review-panel">
                            <div class="profile-score">
                                <div class="profilearea">
                                    <img src="/uploads/avatars/{{profilePicture}}" class="profilepic">
                                </div>
                                <div class="score">
                                    <h2 class="yellowscore" id="user-score">{{overallRating}}</h2>
                                </div>
                                <div class="reply" onclick="toggleReplyPanel('replypanel_{{order}}')">Reply</div>

                            </div>
    
                            <div class="review-center-tile">
                                <div class="score-username">
                                    <h2 class="titlearea">{{title}}</h2>
                                
                                    <div class="nametitle">
                                        <a href="others-profile" class="nameandtime">@{{username}}</a>
                                        <p class="nameandtime"> ¬∑ </p>
                                        <p class="nameandtime">{{createdAtDisplay}}</p>
                                    </div>
                                </div>
                                <div class="criteriaratings">
                                    <div class="criteriascore">
                                        <h4 class="criteria">Food Quality
                                        <div class="stars">
                                           {{#times foodRating}}
                                                <span>üçó</span>
                                            {{/times}}
                                            {{#times noFood}}
                                                <span class="over-emoji">üçó</span>
                                            {{/times}}
                                        </div>
                                    </div>
            
                                    <div class="criteriascore">
                                        <h4 class="criteria">Service
                                        <div class="stars">
                                           {{#times serviceRating}}
                                                <span>ü§ù</span>
                                            {{/times}}
                                            {{#times noService}}
                                                <span class="over-emoji">ü§ù</span>
                                            {{/times}}
                                        </div>
                                    </div>
            
                                    <div class="criteriascore">
                                        <h4 class="criteria">Affordability
                                        <div class="stars">
                                           {{#times affordabilityRating}}
                                                <span>üíµ</span>
                                            {{/times}}
                                            {{#times noMoney}}
                                                <span class="over-emoji">üíµ</span>
                                            {{/times}}
                                        </div>
                                    </div>
                                </div>
    
                                <div class="reviewtext" id="rev{{order}}">
                                    <span class="longtext">{{longText}}</span>
                                    {{#unless hasNoSeeMore}}
                                        <span class="full-text">{{fullText}}</span><span class="see-more" onclick="toggleSeeMore('rev{{order}}')"><b>...see more</b></span>
                                    {{/unless}}
                                </div>
                        
                            </div>
    
    
                            <div class="rate-review" id="likeDislikeButtons">
                                <div class="options-button" onclick="toggleOptions()">
                                    <button class="a" id="a">&#128077;</button>
                                    <span class = "numberoffeedback">{{noOfLikes}}</span>
                                    <button class="a" id="b">&#128078;</button>
                                    <span class="numberoffeedback">{{noOfDislikes}}</span>
                                </div>
                            </div>
                        
            
                        </div>
    
                        <div class="photopanel">
                            {{#each media}}

                                {{#if (isVideo this)}}
                                    <video src="/assets/{{this}}" class="revpic" onclick="openModal('/assets/{{this}}')"></video>

                                {{else}}
                                    <img src="/assets/{{this}}" class="revpic" onclick="openModal('/assets/{{this}}')"></img>

                                {{/if}}
                            {{/each}}
                        </div>
    
                        
                        <div class="modal" id="modal" onclick="closeModal()">
                            <div class="modal-content" onclick="event.stopPropagation();">
                            <span class="close" onclick="closeModal()">&times;</span>
                            <div id="modal-media-container"></div>
                            </div>
                        </div>
                        

                        <div class="replypanel" id="replypanel_{{order}}">
                            <div class="reply-editorarea">
                                <div class="reply-editor"></div>
                            </div>
                            <div class="publish-button" onclick="handleReply(this, 'replypanel_{{order}}')">Publish Reply</div>
                        </div>
                    
                
                    {{#each replies}}
                            <div class="responsepanel">
                            
                                <div class="score-username">
                                    
                                    <div class="profilearea">
                                        <img src="/assets/restaurant icons/{{media}}" class="profilepic">
                                    </div>

                                    <div class="titlearea">

                                        <h2>{{name}} <i class="fas fa-check-circle verified-icon"></i></h2>
                                        <p class="nameandtime">{{createdAt}}</p>

                                    </div>
                                
                                </div>
                                
                                <div id="replytext">
                                    {{body}}
                                </div>
                            </div>
                    {{/each}}
                    </div>
                {{/each}}
            </div>
        </div>  
    </div>

        <div class="right">
            <div class="right-settings-container">
                <div class="rating-container">
                    <div class="overallrate">
                        <h2 class="segoe">Overall Rating</h2>
                        <h1 class="reviewoverall">{{rating}}/5</h1>
                        <input type="hidden" id="fiveStar" value="{{noOfFiveStars}}">
                        <input type="hidden" id="fourStar" value="{{noOfFourStars}}">
                        <input type="hidden" id="threeStar" value="{{noOfThreeStars}}">
                        <input type="hidden" id="twoStar" value="{{noOfTwoStars}}">
                        <input type="hidden" id="oneStar" value="{{noOfOneStars}}">
                    </div>
                    
                    <p class="segoe">{{numberOfReviews}} reviews</p>
                    <div class="chart-container">
                        <canvas id="ratingChart"></canvas>
                    </div>                
                </div>
            
                <div class="search-settings" id="search-settings">
                    <div class="search-settings-container">

                        <h2 class="segoe">Search Review</h2>

                        <div class="search-rev-outer-container">
                            <div class="search-rev-container">
                                <input type="text" placeholder="Search for a review" class="search-rev-input" name="search-rev-input" id="search-rev-input">
                                <button type="submit" class="search-rev-but"><i class="fas fa-search"></i></button>
                            </div>
                        </div>

                        <div class="filter-row">

                            <div class="search-setting">
                                <div class="star-sorting">
                                    <p>Filter reviews: </p>
                                    <span class="filter-slider slider-emoji-rating slider-star-rating">‚≠ê</span>
                                    <span class="filter-slider slider-emoji-rating slider-star-rating">‚≠ê</span>
                                    <span class="filter-slider slider-emoji-rating slider-star-rating">‚≠ê</span>
                                    <span class="filter-slider slider-emoji-rating slider-star-rating">‚≠ê</span>
                                    <span class="filter-slider slider-emoji-rating slider-star-rating">‚≠ê</span>
                                </div>
                            </div>

                    
                            <div class="price-setting">
                                <p>Pricing</p>
                                <div class="price-slider" id="price-filter">
                                    <span class="filter-slider slider-emoji-rating filter-price-rating">üíµ</span>
                                    <span class="filter-slider slider-emoji-rating filter-price-rating">üíµ</span>
                                    <span class="filter-slider slider-emoji-rating filter-price-rating">üíµ</span>
                                    <span class="filter-slider slider-emoji-rating filter-price-rating">üíµ</span>
                                    <span class="filter-slider slider-emoji-rating filter-price-rating">üíµ</span>
                                </div>
                            </div>

                        </div>

                        <div class="filter-row">
                            <div class="search-setting">
                                <p>Food Quality</p>
                                    <div class="star-sorting" id="food-filter">
                                    <span class="filter-slider slider-emoji-rating filter-food-rating">üçó</span>
                                    <span class="filter-slider slider-emoji-rating filter-food-rating">üçó</span>
                                    <span class="filter-slider slider-emoji-rating filter-food-rating">üçó</span>
                                    <span class="filter-slider slider-emoji-rating filter-food-rating">üçó</span>
                                    <span class="filter-slider slider-emoji-rating filter-food-rating">üçó</span>
                                </div>
                            </div>

                            <div class="search-setting">
                                <p>Service</p>
                                <div class="star-sorting" data-criterion="service">
                                <span class="filter-slider slider-emoji-rating filter-service-rating">ü§ù</span>
                                <span class="filter-slider slider-emoji-rating filter-service-rating">ü§ù</span>
                                <span class="filter-slider slider-emoji-rating filter-service-rating">ü§ù</span>
                                <span class="filter-slider slider-emoji-rating filter-service-rating">ü§ù</span>
                                <span class="filter-slider slider-emoji-rating filter-service-rating">ü§ù</span>
                                </div>
                            </div>


                        </div>
                                
                            <div class="sorting">
                            <p>Sort:</p>
                            <select id="criteria">
                                <option value="recommended">Recommended</option>
                                <option value="recentM">Most Recent</option>
                                <option value="recentL">Least Recent</option>
                                <option value="rating">Rating</option>
                                <option value="food-quality">Food Quality</option>
                                <option value="affordability">Price</option>
                                <option value="service">Service</option>
                            </select>
                            
                        </div>

                      
                        <div class="filter-buttons">
                            <button class="no-filter-button adv-search-button" id="noFilter">Reset</button>
                            <button class="apply-button adv-search-button" id="applyFilter">Apply</button>
                            <button class="clear-button adv-search-button" id="clearFilter">Clear Settings</button>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    
    
    </main>
    <script>
        let quillTargets = document.getElementsByClassName('reply-editor')
        let replyPanels = document.getElementsByClassName('replypanel')
        let responsePanels = document.getElementsByClassName('responsepanel')

        
        let quills = []
        Array.from(quillTargets).forEach(quillTarget => quills.push(createQuill(quillTarget)));
        Array.from(replyPanels).forEach(replyPanel => $(replyPanel).hide());
        Array.from(responsePanels).forEach(responsePanel => 
        {
            let bodyText = responsePanel.querySelector("#replytext")

            if(bodyText.innerHTML.length == 0){
                console.log('here');
                $(responsePanel).hide()
            }

        }

        );
    </script>
    <script src="/script/chart.js"></script>
</body>
</html>