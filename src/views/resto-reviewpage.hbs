<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/assets/tab-icon.png" type="image/x-icon">
    <link rel="stylesheet" href="/styles/resto-reviewpage.css">

    <title>Review Restaurant</title>


    <script src="/script/general.js"></script>
    <script src="/script/like.js"></script>
    <script src="/script/slider.js"></script>
    

    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    
    <!-- quill -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <!-- map -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://cdn.jsdelivr.net/npm/darkmode-js@1.5.7/lib/darkmode-js.min.js"></script>

    <!-- chart -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <script src="/script/resto-reviewpage.js"></script>

</head>
<body>
    {{> navbar}}


    <main class = "main">
        <div class="restoinfo">
            <div class="restopicturearea">
                <img src="/assets/restaurant icons/{{media}}" alt="Picture" class="restopicture">
            </div>
            <div class="restodetailsarea">
                <div class="nameandoverallscore">
                    <h1 class="resto-title">{{name}}</h1>
                    <h2 class="yellowscore">{{rating}}/5</h2>
                </div>
                <div class="moredetails">
                    <p class="restodetail" id="emojip">
                        {{#times numberOfCash}}
                            üíµ
                        {{/times}}
                        (P{{startPriceRange}}-{{endPriceRange}})</p>
                    {{#each tag}}
                        <p class="restodetail">{{this}}</p>
                    {{/each}}
                    {{!-- <p class="restodetail">{{tag2}}</p> --}}
                    <p class="restodetail">Open during: {{startOpeningDay}}-{{endOpeningDay}} ({{startOpeningHour}} - {{endOpeningHour}})</p>
                </div>
                <p class="location">{{location}}</p>
                <br>
                <p class="description">{{description}}</p>
                <br>
                <div class="attributes">

                    <div class="firstbatchattri">
                        <div class="feature">
                            {{#if (get amenities 0 0) }} <span class="cross">&#10008;</span> {{else}} <span class="checkmark">&#10004;</span> {{/if}}
                            Offers Delivery
                        </div>
                        <div class="feature">
                            {{#if (get amenities 1 0) }} <span class="cross">&#10008;</span> {{else}} <span class="checkmark">&#10004;</span> {{/if}}
                            Outdoor dining
                        </div>
                        <div class="feature">
                            {{#if (get amenities 2 0) }} <span class="cross">&#10008;</span> {{else}} <span class="checkmark">&#10004;</span> {{/if}}
                            Indoor dining</div>
                        <div class="feature">
                            {{#if (get amenities 3 0) }} <span class="cross">&#10008;</span> {{else}} <span class="checkmark">&#10004;</span> {{/if}}
                            Good for Groups</div>
                    </div>

                    <div class="secondbatchattri">
                        <div class="feature">
                            {{#if (get amenities 4 0) }} <span class="cross">&#10008;</span> {{else}} <span class="checkmark">&#10004;</span> {{/if}}
                            Music and TV</div>
                        <div class="feature">
                            {{#if (get amenities 5 0) }} <span class="cross">&#10008;</span> {{else}} <span class="checkmark">&#10004;</span> {{/if}}
                            Drive-thru</div>
                        <div class="feature">
                            {{#if (get amenities 6 0) }} <span class="cross">&#10008;</span> {{else}} <span class="checkmark">&#10004;</span> {{/if}}
                            Offers Takeout</div>
                        <div class="feature">
                            {{#if (get amenities 7 0) }} <span class="cross">&#10008;</span> {{else}} <span class="checkmark">&#10004;</span> {{/if}}
                            Accepts Credit Cards</div>
                    </div>
                    
                    <div class="thirdbatchattri">
                        <div class="feature">
                            {{#if (get amenities 8 0) }} <span class="cross">&#10008;</span> {{else}} <span class="checkmark">&#10004;</span> {{/if}}
                            Accepts E-Wallet</div>
                        <div class="feature">{{#if (get amenities 9 0) }} <span class="cross">&#10008;</span> {{else}} <span class="checkmark">&#10004;</span> {{/if}}Good for Kids</div>
                        <div class="feature">{{#if (get amenities 10 0) }} <span class="cross">&#10008;</span> {{else}} <span class="checkmark">&#10004;</span> {{/if}}Good for Pets</div>
                        <div class="feature">{{#if (get amenities 11 0) }} <span class="cross">&#10008;</span> {{else}} <span class="checkmark">&#10004;</span> {{/if}}Vegetarian/Vegan Offerings</div>
                    </div>

                </div>
            </div>
        </div>

        <hr>

        <div class="reviewarea">

            <div class="reviewheader">
                <h1>Reviews</h1>
            
            </div>

            <br>

            <div class="rating-map-container">
                <div class="rating-container">
                    <div class="overallrate">
                        <h2 class="segoe">Overall Rating</h2>
                        <h1 class="reviewoverall">{{rating}}/5</h1>
                    </div>
                    
                    <p class="segoe">64 reviews</p>
                    <div>
                        <canvas id="ratingChart"></canvas>
                    </div>                
                </div>
            
                <div id="map"></div>

            </div>

           <hr>
            <div class="publishrevarea" >

                {{#unless loggedIn}}
                    <div class="cannot-publish" id="cannot-publish">
                        <a href="/login">Log in to leave a review</a>
                    </div>
                {{/unless}}

                {{#if loggedIn}}
                    <div class="publishreview" id="publishreview">
                        
                        <div class="criteriaratearea">
                            <div class="criteriarate">
                                <h3 class="criterialbl">Food Quality</h3>
                                <div class="star-sorting" data-criterion="food">
                                    <span onclick="addRating(0, 1)" class="slider-emoji-rating slider-food-rating">üçó</span>
                                    <span onclick="addRating(0, 2)" class="slider-emoji-rating slider-food-rating">üçó</span>
                                    <span onclick="addRating(0, 3)" class="slider-emoji-rating slider-food-rating">üçó</span>
                                    <span onclick="addRating(0, 4)" class="slider-emoji-rating slider-food-rating">üçó</span>
                                    <span onclick="addRating(0, 5)" class="slider-emoji-rating slider-food-rating">üçó</span>
                                </div>
                            </div>

                            <div class="criteriarate">
                                <h3 class="criterialbl">Service</h3>
                                <div class="star-sorting" data-criterion="service">
                                    <span onclick="addRating(1, 1)" class="slider-emoji-rating slider-service-rating">ü§ù</span>
                                    <span onclick="addRating(1, 2)" class="slider-emoji-rating slider-service-rating">ü§ù</span>
                                    <span onclick="addRating(1, 3)" class="slider-emoji-rating slider-service-rating">ü§ù</span>
                                    <span onclick="addRating(1, 4)" class="slider-emoji-rating slider-service-rating">ü§ù</span>
                                    <span onclick="addRating(1, 5)" class="slider-emoji-rating slider-service-rating">ü§ù</span>
                                </div>
                            </div>

                            <div class="criteriarate">
                                <h3 class="criterialbl">Affordability</h3>
                                <div class="star-sorting" data-criterion="price">
                                    <span onclick="addRating(2, 1)" class="slider-emoji-rating slider-price-rating">üíµ</span>
                                    <span onclick="addRating(2, 2)" class="slider-emoji-rating slider-price-rating">üíµ</span>
                                    <span onclick="addRating(2, 3)" class="slider-emoji-rating slider-price-rating">üíµ</span>
                                    <span onclick="addRating(2, 4)" class="slider-emoji-rating slider-price-rating">üíµ</span>
                                    <span onclick="addRating(2, 5)" class="slider-emoji-rating slider-price-rating">üíµ</span>
                                </div>
                            </div>
                            
                        </div>

                        <div class="title-container">
                            <textarea id="title" class="textbox" rows="1" placeholder="Title"></textarea>
                        </div>

                        <br>
                        
                        <div id="editor">
                        </div>

                        <br>
                        
                        <div class="uploadarea">
                            <div class="photo-upload">
                                <label for="photo-input" class="upload-label">
                                <img src="/assets/upload.svg" alt="Upload Icon" class="upload-icon">
                                <br>
                                <span class="upload-text">Upload</span>
                                </label>
                                <input type="file" id="photo-input" name="photos" accept="image/*,video/*" multiple class="hidden-input">
                            </div>
                            
                        
                            <div class="photo-container" id="photo-container">
        
                            </div>
        
                            <div class="modal" id="modal" onclick="closeModal()">
                                <div class="modal-content" onclick="event.stopPropagation();">
                                <span class="close" onclick="closeModal()">&times;</span>
                                <div id="modal-media-container"></div>
                                </div>
                            </div>
                        </div>
                
                        

                        <div class="alignpublishbutton">
                            <button class="publish-button" id="publishBtn">Publish</button>
                        </div>
                    </div>
                {{/if}}
            </div>

            <hr>
                <div class="search-container">
                    <div class="star-sorting">
                        <p>Filter reviews: </p>
                        <span onclick="stars.handleClick(1)" class="slider-star-rating">‚òÖ</span>
                        <span onclick="stars.handleClick(2)" class="slider-star-rating">‚òÖ</span>
                        <span onclick="stars.handleClick(3)" class="slider-star-rating">‚òÖ</span>
                        <span onclick="stars.handleClick(4)" class="slider-star-rating">‚òÖ</span>
                        <span onclick="stars.handleClick(5)" class="slider-star-rating">‚òÖ</span>
                    </div>
                     <img src="/assets/search-icon.svg" alt="" class="search-icon">
                    <input type="search" class="search-bar" placeholder="Find a review">
                    <img src="/assets/clear.svg" alt="" onclick="clearSearchBar()" class="clear-icon" id="clear-icon">
                    <button class="search-button" onclick="searchReview()">
                        Search
                    </button>
                </div>

            <div class="publishedrevarea">
              
                {{#each reviews}}
                    <div class="review"> 
                        <div class="review-panel" id="reviewPanel2">

                            <div class="profile-score">
                                <div class="profilearea">
                                    <img src="/uploads/avatars/{{profilePicture}}" class="profilepic">
                                </div>
                                <div class="score">
                                    <h2 class="yellowscore" id="user-score">{{overallRating}}</h2>
                                </div>
                            </div>

                            <div class="review-center-tile">
                                <div class="score-username">
                                    <h2 class="titlearea">{{title}}</h2>
                                
                                    <div class="nametitle">
                                        <a href="others-profile" class="nameandtime">@{{username}}</a>
                                        <p class="nameandtime"> ¬∑ </p>
                                        <p class="nameandtime">{{createdAt}}</p>
                                    </div>
                                </div>
                                <div class="criteriaratings">
                                    <div class="criteriascore">
                                        <h4 class="criteria">Food Quality
                                        <div class="stars">
                                            {{#times foodRating}}
                                                <span>üçó</span>
                                            {{/times}}
                                            {{#times noFood}}
                                                <span class="over-emoji">üçó</span>
                                            {{/times}}
                                        </div>
                                    </div>
            
                                    <div class="criteriascore">
                                        <h4 class="criteria">Service
                                        <div class="stars">
                                            {{#times serviceRating}}
                                                <span>ü§ù</span>
                                            {{/times}}
                                            {{#times noService}}
                                                <span class="over-emoji">ü§ù</span>
                                            {{/times}}
                                        </div>
                                    </div>
            
                                    <div class="criteriascore">
                                        <h4 class="criteria">Affordability
                                        <div class="stars">
                                            {{#times affordabilityRating}}
                                                <span>üíµ</span>
                                            {{/times}}
                                            {{#times noMoney}}
                                                <span class="over-emoji">üíµ</span>
                                            {{/times}}
                                        </div>
                                    </div>
                                </div>

                                <div class="reviewtext" id="rev{{order}}">
                                    <span class="longtext">{{longText}}</span>
                                    {{#unless hasNoSeeMore}}
                                        <span class="full-text">{{fullText}}</span>
                                        <span class="see-more" onclick="toggleSeeMore('rev{{order}}')"><b>...see more</b></span>
                                    {{/unless}}
                                </div>

                                
            
                            </div>

                            <div class="rate-review" id="likeDislikeButtons">
                                <div class="options-button" onclick="toggleOptions()">
                                    <button class="a" id="a">&#128077;</button>
                                    <span class = "numberoffeedback">{{noOfLikes}}</span>
                                    <button class="a" id="b">&#128078;</button>
                                    <span class="numberoffeedback">{{noOfDislikes}}</span>
                                </div>
                            </div>


                        </div>

                        <div class="photopanel">
                            {{#each media}}

                                {{#if (isVideo this)}}
                                    <video src="/assets/{{this}}" class="revpic" onclick="openModal('/assets/{{this}}')"></video>

                                {{else}}
                                    <img src="/assets/{{this}}" class="revpic" onclick="openModal('/assets/{{this}}')"></img>

                                {{/if}}
                            {{/each}}
                        </div>

                        <div class="modal" id="modal" onclick="closeModal()">
                            <div class="modal-content" onclick="event.stopPropagation();">
                            <span class="close" onclick="closeModal()">&times;</span>
                            <div id="modal-media-container"></div>
                            </div>
                        </div>


                        {{#each replies}}
                        
                            <div class="responsepanel">
                            
                                <div class="score-username">
                                    
                                    <div class="profilearea">
                                        <img src="/assets/restaurant icons/{{media}}" class="profilepic">
                                    </div>

                                    <div class="titlearea">

                                        <h2>{{name}} <i class="fas fa-check-circle verified-icon"></i></h2>
                                        <p class="nameandtime">{{createdAt}}</p>

                                    </div>
                                
                                </div>
                                
                                <div id="replytext">
                                    {{body}}
                                </div>

            
                            </div>
                        {{/each}}


                    </div>
                {{/each}}

            </div>
    </main>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="/script/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.5/dist/sweetalert2.all.min.js"></script>
   
    
</body>
</html>